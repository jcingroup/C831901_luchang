<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="format-detection" content="telephone=no">
    <title>@ViewBag.Title - 理章法律事務所 Lu&Chang Attorenys-at-Law</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Noto+Serif+TC:600|Yantramanav&amp;subset=chinese-traditional">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="~/Content/css/grid.css">
    @RenderSection("css", required: false)
@if (ViewBag.IsFirstPage)
{
    <link rel="stylesheet" href="~/Content/css/index.css">
}
else
{
    <link rel="stylesheet" href="~/Content/css/page.css">
}
</head>

<body class="@ViewBag.BodyClass">
    <div id="wrapper">

        <header id="header">
            <div class="wrap">
                <nav class="head-info">
                    <a href="tel:034265825">03-4265825</a>
                    <a href="tel:034265925">03-4265925</a>
                </nav>
                <h1 class="logo" onclick="location.href='@Url.Content("~/Home")'" title="回首頁" tabindex="-1"><span>理章法律事務所</span> <small>Lu&Chang Attorenys-at-Law</small></h1>
                <nav id="menu" class="pull-sm-right">
                    <a href="~/Home" class="nav-link @(ViewBag.BodyClass == "Home" ? "active" : "")">首頁</a>
                    <a href="~/Team" class="nav-link @(ViewBag.BodyClass == "Team" ? "active" : "")">團隊</a>
                    <a href="~/Profession" class="nav-link @(ViewBag.BodyClass == "Profession" ? "active" : "")">領域</a>
                    <a href="~/Special" class="nav-link @(ViewBag.BodyClass == "Special" ? "active" : "")">專欄</a>
                    <a href="~/ContactUs" class="nav-link @(ViewBag.BodyClass == "ContactUs" ? "active" : "")">聯絡</a>
                </nav>
            </div>
        </header>

        @if (!ViewBag.IsFirstPage)
        {
            <ul class="breadcrumb wrap">
                <li><a href="~/Home">HOME</a></li>
                @RenderSection("breadcrumb", required: false)
                <li>@ViewBag.BreadCrumb</li>
            </ul>
        }
        @RenderBody()

    </div><!-- wrapper //-->

    <a href="#wrapper" class="goTop ti-arrow-up" title="TOP"></a>
    <footer id="footer">
        <ul class="list-unstyled foot-info">
            <li>電話: <a href="tel:034265825">03-4265825</a>, <a href="tel:034265925">03-4265925</a></li>
            <li>傳真: 03-4265625</li>
            <li>地址: <a href="https://goo.gl/maps/xC61dfyLPwfs4Vi3A" target="new">桃園市中壢區元化路二段126號10樓</a></li>
        </ul>
        <aside class="copyright">Lu&Chang Attorenys-at-Law &copy; 2019</aside>
    </footer>

    <script src="//code.jquery.com/jquery-latest.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
